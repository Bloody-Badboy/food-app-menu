<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">


    <View
        android:id="@+id/placeholder_veg_non_veg"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/placeholder_name"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="@+id/placeholder_veg_non_veg"
        app:layout_constraintEnd_toStartOf="@+id/placeholder_dish_image"
        app:layout_constraintStart_toEndOf="@+id/placeholder_veg_non_veg"
        app:layout_constraintTop_toTopOf="@+id/placeholder_veg_non_veg" />

    <View
        android:id="@+id/placeholder_desc"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintEnd_toEndOf="@+id/placeholder_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/placeholder_name"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_price" />

    <View
        android:id="@+id/placeholder_desc2"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintEnd_toEndOf="@+id/placeholder_name"
        app:layout_constraintStart_toStartOf="@+id/placeholder_name"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_desc" />

    <View
        android:id="@+id/placeholder_desc3"
        android:layout_width="0dp"
        android:layout_height="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintEnd_toEndOf="@+id/placeholder_name"
        app:layout_constraintStart_toStartOf="@+id/placeholder_name"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_desc2" />

    <View
        android:id="@+id/placeholder_dish_image"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?colorControlHighlight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/placeholder_customizable"
        android:layout_width="56dp"
        android:layout_height="8dp"
        android:layout_marginTop="8dp"
        android:background="?colorControlHighlight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/placeholder_dish_image"
        app:layout_constraintStart_toStartOf="@+id/placeholder_dish_image"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_dish_image" />


    <View
        android:id="@+id/placeholder_price"
        android:layout_width="32dp"
        android:layout_height="10dp"
        android:layout_marginTop="4dp"
        android:background="?colorControlHighlight"
        android:textColor="?android:attr/textColorPrimary"
        app:layout_constraintStart_toStartOf="@+id/placeholder_name"
        app:layout_constraintTop_toBottomOf="@+id/placeholder_name" />

    <View
        android:id="@+id/placeholder_tags"
        android:layout_width="72dp"
        android:layout_height="10dp"
        android:layout_marginStart="8dp"
        android:background="?colorControlHighlight"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/placeholder_price"
        app:layout_constraintStart_toEndOf="@id/placeholder_price"
        app:layout_constraintTop_toTopOf="@id/placeholder_price" />
</androidx.constraintlayout.widget.ConstraintLayout>
